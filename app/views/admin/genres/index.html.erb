<div class='container'>
  <div class='row d-flex justify-content-around'>
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0">

      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="field form-item">
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name, autofocus: true, placeholder:"ジャンル名" %>
      </div>

      <div class="field form-item">
         <%= f.label :"説明文" %>
         <%= f.text_field :introduction, placeholder:"最高のひと時を" %></td>
      </div>

      <div class="actions button-panel">
        <%= f.submit "新規登録", class: 'button' %>
      </div>

      <% end %>
    </div>
  </div>
</div>

<div class="container p-5">
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th>ジャンル名</th>
        <th>説明文</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= genre.introduction %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @genres %>
</div>