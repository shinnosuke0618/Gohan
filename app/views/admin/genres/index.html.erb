<div class="container p-5">
  <div class="row">
  <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="row mt-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <tr>
        <td><%= f.label :"ジャンル名" %></td>
        <td><%= f.text_field :name, autofocus: true, placeholder:"ジャンル名" %></td>
      </tr>
      </br>
      <tr>
        <td><%= f.label :"説明文" %></td>
        <td><%= f.text_field :introduction, placeholder:"最高のひと時を" %></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    <% end %>
    </div>
  </div>
</div>

<div class="container p-5">
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th>ジャンル名</th>
        <th>説明文</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= genre.introduction %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @genres %>
</div>
