<div class='container'>
  <div class='row d-flex justify-content-around'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>ログイン</h2>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="field form-item">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email,  autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field form-item">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions button-panel">
          <%= f.submit "ログイン", class: 'button' %>
        </div>
      <% end %>

      <p class="pt-3 title_border">会員登録がお済みでない方</p>
      <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>

        <div class="row">
          <%= link_to 'ゲストログイン（閲覧用）', customer_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>

    </div>
  </div>
</div>

<style>
h2 {
  text-align: center;
  padding: 1em 0;
  color: #5e5e5e;
}

p {
  color: #5e5e5e;
}

.title_border {
  border-bottom: solid 3px #ffffcc;
  position: relative;
}

.title_border:after {
  position: absolute;
  content: " ";
  display: block;
  border-bottom: solid 3px  #ffcc33;
  bottom: -3px;
  width: 20%;
}

  .form-item {
  margin-bottom: 0.75em;
  width: 100%;
  color: #5e5e5e;
}

.form-item input {
  background: #fafafa;
  border: none;
  border-bottom: 2px solid #e9e9e9;
  color: #666;
  font-family: 'Open Sans', sans-serif;
  font-size: 1em;
  height: 50px;
  transition: border-color 0.3s;
  width: 100%;
}

.form-item input:focus {
  border-bottom: 2px solid #c0c0c0;
  outline: none;
}

.button-panel {
  margin: 2em 0 0;
  width: 100%;
  color: #5e5e5e;
}


.button-panel .button {
  background:  #ffcc33;
  border: none;
  color: #5e5e5e;
  cursor: pointer;
  height: 50px;
  font-family: 'Open Sans', sans-serif;
  font-size: 1.2em;
  letter-spacing: 0.05em;
  text-align: center;
  text-transform: uppercase;
  transition: background 0.3s ease-in-out;
  width: 100%;
}
</style>