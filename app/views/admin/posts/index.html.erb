<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <h2 class="table-active">投稿一覧</h2>

      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>説明</th>
            <th>レストラン名</th>
            <th></th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to admin_post_path(post.id) do %>
              <%= post.title %>
              <% end %>
            </td>
            <td><%= post.genre.name %></td>
            <td>
              <%= post.restaurant_name %>
            </td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @posts %>

    </div>
  </div>
</div>