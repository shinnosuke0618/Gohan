<div class="container text-center">
 	<div class="row">
	 	<div class="col">
     <h3><%= @genre.name %></h3>
     <p><%= @genre.introduction %></p>
    </div>
  </div>


    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-md-3 col-sm-4 p-3">
        <div class="text-center shadow-lg" style="width: 13rem;">
          <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image, size:'160x165', class: 'card-img-top' %>
          <h5 class="card-text"><%= post.title %></h5>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate @posts %>
</div>