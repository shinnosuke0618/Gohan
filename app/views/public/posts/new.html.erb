<div class="container">
  <div class="row">
    <div class="col-md-10 px-5 px-sm-0 mx-auto">

      <h2 class="mt-4">投稿新規登録</h2>

      <%= form_with model: @post, url: posts_path, local: true do |f| %>
        <div class="form-group mt-4">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'form-control post_name' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class: 'form-control post_introduction' %>
        </div>

        <div class="form-group">
          <%= f.label :genre, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, {class: "new-wrapper__main__input-select"} %>
        </div>

        <div class="form-group">
          <%= f.label :restaurant_name, "レストラン名" %>
          <%= f.text_field :restaurant_name, class: 'form-control post_restaurant_name' %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "電話番号" %>
          <%= f.text_field :phone_number, class: 'form-control post_phone_number' %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: 'form-control post_address' %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>

      <% end %>

    </div>
  </div>
</div>