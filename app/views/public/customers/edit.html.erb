<div class='container'>
  <div class='row d-flex justify-content-around'>
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0">

      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: customers_path do |f| %>

      <div class="field form-item">
        <%= f.label :名前 %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field form-item">
        <%= f.label :自己紹介文 %><br />
        <%= f.text_field :introduction %>
      </div>

      <div class="field form-item">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email %>
      </div>

      <div class="actions button-panel">
        <%= f.submit "編集内容を保存", class: 'button' %>
      </div>

      <div class="actions button-panel">
        <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger btn-block" %>
      </div>

      <% end %>
    </div>
  </div>
</div>

<style>
h2 {
  text-align: center;
  padding: 1em 0;
  color: #5e5e5e;
}

p {
  color: #5e5e5e;
}

.title_border {
  border-bottom: solid 3px #ffffcc;
  position: relative;
}

.title_border:after {
  position: absolute;
  content: " ";
  display: block;
  border-bottom: solid 3px  #ffcc33;
  bottom: -3px;
  width: 20%;
}

  .form-item {
  margin-bottom: 0.75em;
  width: 100%;
  color: #5e5e5e;
}

.form-item input {
  background: #fafafa;
  border: none;
  border-bottom: 2px solid #e9e9e9;
  color: #666;
  font-family: 'Open Sans', sans-serif;
  font-size: 1em;
  height: 50px;
  transition: border-color 0.3s;
  width: 100%;
}

.form-item input:focus {
  border-bottom: 2px solid #c0c0c0;
  outline: none;
}

.button-panel {
  margin: 2em 0 0;
  width: 100%;
  color: #5e5e5e;
}


.button-panel .button {
  background:  #ffcc33;
  border: none;
  color: #5e5e5e;
  cursor: pointer;
  height: 50px;
  font-family: 'Open Sans', sans-serif;
  font-size: 1.2em;
  letter-spacing: 0.05em;
  text-align: center;
  text-transform: uppercase;
  transition: background 0.3s ease-in-out;
  width: 100%;
}
</style>