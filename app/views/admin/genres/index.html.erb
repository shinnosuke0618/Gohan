<div class='container'>
  <div class="row">
    <div class="col-md-10 px-5 px-sm-0 mx-auto">

      <h2>ジャンル登録</h2>
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name, autofocus: true, placeholder:"ジャンル名", class: 'form-control genre_name' %>
      </div>

      <div class="form-group">
         <%= f.label :"説明文" %>
         <%= f.text_area :introduction, placeholder:"最高のひと時を", class: 'form-control genre_introduction' %></td>
      </div>
      </br>

      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>

      <% end %>
    </div>
  </div>
</div>

<div class="container p-5">
  <h2>ジャンル一覧</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th>ジャンル名</th>
        <th>説明文</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= genre.introduction %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @genres %>
</div>